# Django Settings для PRODUCTION
# ВАЖНО: Сгенерируйте новый SECRET_KEY для production!
SECRET_KEY=your-production-secret-key-change-this

# Debug режим (ВСЕГДА False для production!)
DEBUG=False

# Разрешённые хосты (через запятую, без пробелов)
ALLOWED_HOSTS=api.calorio.app,www.calorio.app

# Database (PostgreSQL для production)
DATABASE_URL=postgresql://calorio_user:strong_password@localhost:5432/calorio

# OpenRouter API (для распознавания блюд)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Payment Provider Webhook Secret
PAYMENT_WEBHOOK_SECRET=your-webhook-secret-here

# CORS Settings (домены фронтенда через запятую)
CORS_ALLOWED_ORIGINS=https://calorio.app,https://www.calorio.app

# Security Settings (для production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Data Upload Limits
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10 МБ
DATA_UPLOAD_MAX_NUMBER_FIELDS=1000

# Email Settings (для отправки уведомлений)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@calorio.app

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry (для мониторинга ошибок, опционально)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Redis (для кэширования, опционально)
# REDIS_URL=redis://localhost:6379/0

